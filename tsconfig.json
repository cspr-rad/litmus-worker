{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020",
      "webworker",
      "es2020.bigint"
    ],
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["webpack-env"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
