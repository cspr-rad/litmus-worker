{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "webworker",
    ],
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest", "webpack-env", "node"]
  },
  "include": ["src/**/*", "custom.d.ts"],
  "exclude": ["node_modules"]
}
